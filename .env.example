# BadenLEG Environment Variables
# Copy this file to .env and fill in your values

# === Application Settings ===
APP_BASE_URL=https://badenleg.ch
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1,badenleg.ch

# === PostgreSQL Database ===
# Railway provides this automatically, or set for local development
DATABASE_URL=postgresql://user:password@localhost:5432/badenleg
DB_POOL_MIN=2
DB_POOL_MAX=10

# === Email (SendGrid) ===
SENDGRID_API_KEY=SG.your-api-key-here
FROM_EMAIL=noreply@badenleg.ch
ADMIN_EMAIL=hallo@badenleg.ch

# === Analytics ===
GA4_MEASUREMENT_ID=G-XXXXXXXXXX

# === Admin Access ===
ADMIN_TOKEN=your-secure-admin-token

# === Session Settings ===
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# === Data Storage (for JSON fallback) ===
DATA_DIR=/data
TOKEN_FILE=/data/badenleg_tokens.json
