# BadenLEG Environment Variables
# Copy this file to .env and fill in your values

# === PostgreSQL ===
POSTGRES_PASSWORD=your-secure-postgres-password

# === Application Settings ===
APP_BASE_URL=https://badenleg.ch
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1,badenleg.ch
# DATABASE_URL is set automatically in docker-compose.yml

# === Email (SMTP) ===
SMTP_HOST=mail.infomaniak.com
SMTP_PORT=587
SMTP_USER=hallo@badenleg.ch
SMTP_PASSWORD=your-smtp-password
FROM_EMAIL=hallo@badenleg.ch
ADMIN_EMAIL=hallo@badenleg.ch

# === Analytics ===
GA4_MEASUREMENT_ID=G-XXXXXXXXXX

# === Admin Access ===
ADMIN_TOKEN=your-secure-admin-token

# === Session Settings ===
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# === Data Storage (for JSON fallback) ===
DATA_DIR=/data
TOKEN_FILE=/data/badenleg_tokens.json

# === OpenClaw (VPS only) ===
ANTHROPIC_API_KEY=sk-ant-...
OPENCLAW_GATEWAY_TOKEN=<generate-secure-token>
BRAVE_API_KEY=<brave-api-key>
OPENCLAW_READONLY=false
