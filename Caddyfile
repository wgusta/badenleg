# OpenClaw AI gateway
claw.openleg.ch {
    reverse_proxy openclaw:18789
}

# Public API
api.openleg.ch {
    reverse_proxy flask:5000
}

# Main site
openleg.ch {
    reverse_proxy flask:5000
}

# Demo municipality instance
newbaden.openleg.ch {
    reverse_proxy flask:5000
}

# www redirect
www.openleg.ch {
    redir https://openleg.ch{uri} permanent
}
