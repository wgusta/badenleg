{
  "agents": {
    "defaults": {
      "model": {
        "primary": "groq/qwen3-32b",
        "fallbacks": ["groq/llama-3.3-70b"]
      },
      "models": {
        "groq/qwen3-32b": { "alias": "Qwen3" },
        "groq/llama-3.3-70b": { "alias": "Llama" }
      },
      "workspace": "/home/node/.openclaw/workspace"
    }
  },

  "models": {
    "providers": [
      {
        "baseUrl": "https://api.groq.com/openai/v1",
        "apiKey": "${GROQ_API_KEY}",
        "api": "openai-completions",
        "models": [
          {
            "id": "qwen-qwen3-32b",
            "name": "groq/qwen3-32b"
          },
          {
            "id": "llama-3.3-70b-versatile",
            "name": "groq/llama-3.3-70b"
          }
        ]
      }
    ]
  },

  "gateway": {
    "port": 18789,
    "bind": "lan",
    "auth": {
      "token": "${OPENCLAW_GATEWAY_TOKEN}"
    }
  },

  "mcpServers": {
    "badenleg": {
      "command": "node",
      "args": ["/opt/mcp-badenleg-server/server.mjs"],
      "env": {
        "DATABASE_URL": "postgresql://badenleg:${POSTGRES_PASSWORD}@postgres:5432/badenleg",
        "BRAVE_API_KEY": "${BRAVE_API_KEY}"
      }
    }
  },

  "tools": {
    "profile": "full"
  },

  "session": {
    "dmScope": "per-channel-peer",
    "reset": { "mode": "daily", "atHour": 4 }
  }
}
